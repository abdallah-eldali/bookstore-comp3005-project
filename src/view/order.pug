doctype html
html(lang='en')
    head 
        title Orders
    body 
        h1 Orders 
        a(href='/bookstore') Bookstore 
        a(href='/basket') Basket

        table(style='width:100%', border='1')
            tr 
                th Order Number 
                th Address
                th Card Number
                th Date
                th ISBN(s)
                th Quantity
            
            each order in orders

                tr
                    td #{order.order_id}
                    td #{order.full_address}
                    td #{order.card_number}
                    td #{order.order_date}
                    td #{order.isbn}
                    td #{order.quantity}

